{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "autoClosingPairs": [
    { "open": "\"", "close": "\"", "notIn": ["comment"] },
    { "open": "(", "close": ")" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" }
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*[\\{\\[\\(]\\s*$",
    "decreaseIndentPattern": "^\\s*[\\}\\]\\)]\\s*$"
  }
}
