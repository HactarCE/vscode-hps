          "name": "meta.use.hps",
          "begin": "\\b(use)\\b",
          "beginCaptures": {
            "0": {
              "name": "storage.type.use.hps"
            }
          },
          "end": "(?=[\\n}])",
          "patterns": [
            {
              "name": "storage.type.glob.hps",
              "match": "\\*"
