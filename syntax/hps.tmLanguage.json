      ]
    },
    "fn-declaration": {
      "patterns": [
        {
          "name": "meta.function.hps",
          "begin": "(?:\\b(export)\\b\\s+)?\\b(fn)\\s*([^\\(]*)(?:(\\([^\\)]*\\))\\s*(->\\s*[^{]*)?\\{?)?",
