            {
              "name": "keyword.control.flow.as.hps",
              "match": "\\b(as)\\b"
            },
            {
              "name": "keyword.control.flow.from.hps",
              "match": "\\b(from)\\b"
            },
            {
              "name": "invalid.illegal.assignment.augmented.hps",
              "match": "(?x)  \\*\\*=\n  | <<=\n  | >>=\n  | \\?\\?=\n  | \\+=\n  | -=\n  | (?<!\\*)\\*=\n  | /=\n  | %=\n  | &=\n  | \\|=\n  | \\^="
